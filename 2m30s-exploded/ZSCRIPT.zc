    {
        if (turnAngle == 0) {turnAngle = 90;}
        Super.Tick();
        if (!CheckMove((Pos.X + Vel.X, Pos.Y + Vel.Y)))
        {
            // Console.PrintF("Squeaker WILL TURN");
            willTurn = true;
        }
    }
}

